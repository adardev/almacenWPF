<Window x:Class="almacenWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:almacenWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="773*"/>
        </Grid.ColumnDefinitions>
        <Button Click="login" Grid.Column="1" Content="Inicar Sesion" HorizontalAlignment="Left" Margin="333,187,0,0" VerticalAlignment="Top"/>
        <TextBox Name="nombre" Grid.Column="1" HorizontalAlignment="Left" Margin="308,83,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="password" Grid.Column="1" HorizontalAlignment="Left" Margin="308,132,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="goToSignup" Grid.Column="1" Content="Crear Usuario" HorizontalAlignment="Left" Margin="330,239,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>