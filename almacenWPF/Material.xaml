<Window x:Class="almacenWPF.Material"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Material" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Name="nombreMaterial" Width="150" Margin="0,0,10,0" />
            <TextBox Name="descripcionMaterial" Width="200" Margin="0,0,10,0"/>
            <ComboBox Name="tipoMaterial" Width="120" Margin="0,0,10,0">
                <ComboBoxItem Content="pieza"/>
                <ComboBoxItem Content="herramienta"/>
            </ComboBox>
            <TextBox Name="cantidadDisponible" Width="80" Margin="0,0,10,0"/>
            <TextBox Name="precioMaterial" Width="80" Margin="0,0,10,10" Height="21"/>
            <Button Content="Agregar Material" Click="AgregarMaterial_Click" />
        </StackPanel>
        <DataGrid x:Name="materialesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdMat}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" />
                <DataGridTextColumn Header="Cantidad Disponible" Binding="{Binding CantidadDisponible}" />
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" />
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>